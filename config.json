{
  "watch_mode": "mount",
  "watch_target": "/home",
  "patterns": [
    "password\\s*=\\s*.*",
    "passwd\\s*=\\s*.*",
    "pwd\\s*=\\s*.*",
    "secret\\s*=\\s*.*",
    "api[_-]?key\\s*=\\s*.*",
    "access[_-]?token\\s*=\\s*.*",
    "auth[_-]?token\\s*=\\s*.*",
    "bearer\\s+[A-Za-z0-9\\-_\\.]+",
    "private[_-]?key\\s*=\\s*.*",
    "ssh-rsa\\s+[A-Za-z0-9\\+/=]+",
    "BEGIN\\s+PRIVATE\\s+KEY",
    "BEGIN\\s+RSA\\s+PRIVATE\\s+KEY",
    "BEGIN\\s+OPENSSH\\s+PRIVATE\\s+KEY",
    "client[_-]?secret\\s*=\\s*.*",
    "jwt\\s*[:=]\\s*[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+\\.[A-Za-z0-9\\-_]+"
  ],
  "cache_capacity_bytes": "80KB",
  "max_file_size_sync_scan": "10MB",
  "statistical": {
    "duration_sec": 1200
  }
}
